# ============================================
# Database Configuration
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/meeting_tasks"

# ============================================
# Supabase Configuration
# ============================================
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# JWT Secret (Supabase JWT secret for verification)
JWT_SECRET="your-supabase-jwt-secret"

# ============================================
# AI Configuration
# ============================================
# OpenAI API Key (for AI task extraction)
OPENAI_API_KEY="sk-..."

# DeepSeek API Key (alternative AI provider)
DEEPSEEKAUTH="your-deepseek-api-key"

# ============================================
# Server Configuration
# ============================================
PORT=3001
NODE_ENV="development"

# ============================================
# Production-Only Configuration
# ============================================
# CORS allowed origins (comma-separated list of domains)
# Required in production, ignored in development
# Example: ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"
ALLOWED_ORIGINS=""

# Frontend URL (used for invite links)
# Example: FRONTEND_URL="https://yourdomain.com"
FRONTEND_URL="http://localhost:3000"
